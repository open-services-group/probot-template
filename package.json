{
  "name": "{{name}}",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://github.com/{{org}}",
  "scripts": {
    "build": "tsc",
    "start": "node lib/index.js",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "format": "prettier -w 'src/**/*.ts'",
    "lint": "prettier --check 'src/**/*.{ts,js}'; eslint src --ext .ts,.js"
  },
  "dependencies": {
    "@operate-first/probot-kubernetes": "1.0.1",
    "@operate-first/probot-metrics": "1.0.0",
    "@operate-first/probot-issue-form": "1.0.0",
    "probot": "12.2.5"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.5",
    "@types/jest": "28.1.6",
    "@types/node": "16.11.45",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "eslint": "8.20.0",
    "eslint-config-prettier": "8.5.0",
    "jest": "28.1.3",
    "nock": "13.2.9",
    "nodemon": "2.0.19",
    "prettier": "2.7.1",
    "smee-client": "1.2.3",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ]
      }
    ],
    "extends": [
      "eslint:recommended",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "release": {
    "branches": "main",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/\\( *newTag: \\).*$/\\1${nextRelease.gitTag}/g' manifests/overlays/stage/kustomization.yaml"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json",
            "manifests/overlays/stage/kustomization.yaml"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
